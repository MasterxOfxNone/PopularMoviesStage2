<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/movie_plot_summary_vertical_margin"
        android:paddingLeft="@dimen/movie_reviews_author_horizontal_margin"
        android:paddingRight="@dimen/movie_reviews_author_horizontal_margin"
        android:paddingTop="@dimen/movie_plot_summary_vertical_margin"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_author"
        android:paddingLeft="@dimen/movie_reviews_content_horizontal_margin"
        android:paddingRight="@dimen/movie_reviews_content_horizontal_margin"/>

</RelativeLayout>