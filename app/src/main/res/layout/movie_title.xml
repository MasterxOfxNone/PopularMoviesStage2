<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/movie_title_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent">

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/movie_title_vertical_margin"
        android:layout_marginLeft="@dimen/movie_title_horizontal_margin"
        android:layout_marginRight="@dimen/movie_title_horizontal_margin"
        android:layout_marginTop="@dimen/movie_title_vertical_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/movie_title_text_size"/>

    <CheckBox
        android:id="@+id/favorite"
        style="?android:starStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/movie_title_horizontal_margin"
        android:layout_marginRight="@dimen/movie_title_horizontal_margin"/>

</RelativeLayout>