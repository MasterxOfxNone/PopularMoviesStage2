<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
               android:id="@+id/trailer_thumbnail_image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_alignParentTop="true"
               android:contentDescription="@string/mock_text_movie_title"
               android:paddingBottom="@dimen/movie_trailer_vertical_margin"
               android:paddingLeft="@dimen/movie_trailer_horizontal_margin"
               android:paddingRight="@dimen/movie_trailer_horizontal_margin"
               android:paddingTop="@dimen/movie_trailer_vertical_margin"/>

    <TextView
        android:id="@+id/trailer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/trailer_thumbnail_image"
        android:paddingBottom="@dimen/movie_plot_summary_vertical_margin"
        android:paddingLeft="@dimen/movie_reviews_author_horizontal_margin"
        android:paddingRight="@dimen/movie_reviews_author_horizontal_margin"
        android:paddingTop="@dimen/movie_plot_summary_vertical_margin"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/trailer_origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/trailer_thumbnail_image"
        android:layout_below="@+id/trailer_name"
        android:paddingLeft="@dimen/movie_reviews_content_horizontal_margin"
        android:paddingRight="@dimen/movie_reviews_content_horizontal_margin"/>

</RelativeLayout>